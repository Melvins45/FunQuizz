<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher_funquizz"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_funquizz_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FunQuizz"
        tools:targetApi="31">
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>
        <activity
            android:name=".ui.BestScoreActivity"
            android:exported="false"
            android:label="@string/title_activity_best_score"
            android:theme="@style/Theme.FunQuizz" />
        <activity
            android:name=".ui.ParametersActivity"
            android:exported="false"
            android:label="@string/title_activity_parameters"
            android:theme="@style/Theme.FunQuizz" />
        <activity
            android:name=".ui.ScreenShotActivity"
            android:exported="false"
            android:label="@string/title_activity_screen_shot"
            android:theme="@style/Theme.FunQuizz" />
        <activity
            android:name=".ui.ScoreActivity"
            android:exported="false"
            android:label="@string/title_activity_score"
            android:theme="@style/Theme.FunQuizz" />
        <activity
            android:name=".ui.QuestionActivity"
            android:exported="false"
            android:label="@string/title_activity_question"
            android:theme="@style/Theme.FunQuizz" />
        <activity
            android:name=".ui.StartActivity"
            android:exported="false"
            android:label="@string/title_activity_start"
            android:theme="@style/Theme.FunQuizz" />
        <activity
            android:name=".ui.LevelActivity"
            android:exported="false"
            android:label="@string/title_activity_level"
            android:theme="@style/Theme.FunQuizz" />
        <activity
            android:name=".ui.SubCategoryActivity"
            android:exported="false"
            android:label="@string/title_activity_sub_category"
            android:theme="@style/Theme.FunQuizz" />
        <activity
            android:name=".ui.CategoryActivity"
            android:exported="false"
            android:label="@string/title_activity_category"
            android:theme="@style/Theme.FunQuizz" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.FunQuizz">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="28"/>
</manifest>